{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "tasks": {
    "lint": {
      "outputs": [],
      "cache": true
    },
    "lint:fix": {
      "outputs": [],
      "cache": false
    },
    "format": {
      "outputs": [],
      "cache": false
    },
    "format:check": {
      "outputs": [],
      "cache": true
    },
    "build": {
      "outputs": []
    },
    "web:build": {},
    "web:dev": {
      "persistent": true
    },
    "web:start": {
      "dependsOn": ["^db:generate"]
    },
    "trigger:deploy": {},
    "trigger:deploy:staging": {},
    "trigger:dev": {
      "persistent": true
    },
    "hook:stripe": {
      "persistent": true
    },
    "hook:github": {
      "persistent": true
    },
    "hook:dev": {
      "persistent": true
    },
    "hook:start": {
      "dependsOn": ["^db:generate"]
    },
    "dev": {
      "persistent": true
    },
    "start": {
      "dependsOn": ["^db:generate"]
    },
    "slides:dev": {
      "persistent": true,
      "cache": false
    },
    "slides:build": {},
    "slides:start": {
      "dependsOn": ["^db:generate"]
    },
    "pages:dev": {
      "persistent": true,
      "cache": false
    },
    "pages:build": {},
    "pages:start": {
      "dependsOn": ["^db:generate"]
    },
    "db:generate": {},
    "db:start": {},
    "db:deploy": {
      "cache": false
    },
    "db:seed": {},
    "db:reset": {},
    "db:dev": {},
    "test": {
      "cache": false,
      "outputs": ["test-results/**", "playwright-report/**"]
    },
    "test:integration": {
      "cache": false,
      "outputs": []
    },
    "web:test": {
      "cache": false,
      "outputs": ["test-results/**", "playwright-report/**"]
    },
    "web:test:ui": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "BETTER_AUTH_SECRET",
    "BETTER_AUTH_URL",
    "GITHUB_CLIENT_ID",
    "GITHUB_CLIENT_SECRET",
    "GITHUB_APP_ID",
    "GITHUB_APP_NAME",
    "GITHUB_PRIVATE_KEY_BASE64",
    "GITHUB_PRIVATE_KEY",
    "GITHUB_WEBHOOK_SECRET",
    "GITHUB_PROF_TOKEN",
    "GITHUB_INSTRUCTOR_TOKEN",
    "GITHUB_TA_TOKEN",
    "GITHUB_STUDENT_TOKEN",
    "DATABASE_URL",
    "REDIS_URL",
    "EMAIL",
    "EMAIL_PASSWORD",
    "TRIGGER_SECRET_KEY",
    "TRIGGER_API_URL",
    "HOST_URL",
    "OPENAI_API_KEY",
    "ANTHROPIC_API_KEY",
    "EXPLORATION_MODE",
    "LLM_PROVIDER",
    "LLM_MODEL",
    "LLM_TEMPERATURE",
    "LLM_MAX_TOKENS",
    "EXPLORATION_MODEL",
    "STRIPE_SECRET_KEY",
    "STRIPE_WEBHOOK_SECRET",
    "TC_APP_NAME",
    "TC_APP_ID",
    "TC_CLIENT_ID",
    "TC_CLIENT_SECRET",
    "TC_PRIVATE_KEY",
    "AI_AGENT_URL",
    "WEBAPP_URL",
    "SLIDES_URL",
    "PAGES_URL",
    "PAGES_PORT",
    "DEVPORT_ID",
    "DEVPORT_NAME",
    "PORT",
    "AI_AGENT_SHARED_SECRET",
    "CLOUDINARY_CLOUD_NAME",
    "CLOUDINARY_API_KEY",
    "CLOUDINARY_API_SECRET",
    "CALENDAR_SECRET",
    "MODE",
    "INFISICAL_CLIENT_ID",
    "INFISICAL_CLIENT_SECRET",
    "INFISICAL_PROJECT_ID",
    "INFISICAL_HOST"
  ]
}
